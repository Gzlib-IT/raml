{
  "name": "CODEX Instance CQL Schema",
  "description": "Supported indexes and operators in CODEX instance search",
  "indexes": [
    {
      "name": "title",
      "type": "string",
      "capability": [
        "search",
        "sort"
      ]
    },
    {
      "name": "publisher",
      "type": "string"
    },
    {
      "name": "subject",
      "type": "string"
    },
    {
      "name": "identifier",
      "type": "string",
       "modifiers": [
        {"name": "type", "values": ["isbn", "issn"]}
      ]
    },
    {
      "name": "location",
      "type": "string",
      "capability": [
        "filter"
      ]
    },
    {
      "name": "type",
      "type": "string",
      "description": "Resource type filter, see CODEX instance schema for the list of allowed values",
      "capability": [
        "filter"
      ]
    },
    {
      "name": "source",
      "type": "string",
      "capability": [
        "filter"
      ],
      "values": ["kb", "local", "all"]
    },
    {
      "name": "selected",
      "type": "string",
      "description": "KB-specifc to filter resources selected/non-selected/both by the library",
      "capability": [
        "filter"
      ],
      "values": ["both", "yes", "no"]
    }
  ],
  "operators": [
    {
      "type": "AND",
      "supported": false
    },
    {
      "type": "OR",
      "supported": false
    },
    {
      "type": "NOT",
      "supported": false
    },
    {
      "type": "PROX",
      "supported": false
    }
  ]
}
